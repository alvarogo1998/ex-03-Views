<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="4dp"
    app:cardCornerRadius="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_lodging"
            android:layout_width="0dp"
            android:layout_height="@dimen/image_height"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/text_title_lodging"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding"
            android:text="@string/title_lodging"
            android:textSize="@dimen/name"
            app:layout_constraintEnd_toEndOf="@id/image_lodging"
            app:layout_constraintStart_toStartOf="@id/image_lodging"
            app:layout_constraintTop_toBottomOf="@id/image_lodging" />

        <TextView
            android:id="@+id/text_description_lodging"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding"
            android:maxLines="3"
            android:ellipsize="end"
            android:textColor="@color/grey"
            android:textSize="@dimen/name_movie"
            app:layout_constraintEnd_toEndOf="@id/text_title_lodging"
            app:layout_constraintStart_toStartOf="@id/text_title_lodging"
            app:layout_constraintTop_toBottomOf="@id/text_title_lodging"
            tools:text="@tools:sample/lorem/random" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>