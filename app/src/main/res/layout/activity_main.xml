<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/action_dogEx01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dogButton" />

    <Button
        android:id="@+id/action_movieEx02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/movieButton" />

    <Button
        android:id="@+id/action_burgerEx03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/BurgerButton" />

    <Button
        android:id="@+id/action_lodgingEx04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/LodgingButton" />

</LinearLayout>